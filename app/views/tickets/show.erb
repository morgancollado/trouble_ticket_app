<table class="table">
    <thead>
        <tr>
            <th scope="col">Subject</th>
            <td scope="col"><%= @ticket.title %></td>
        </tr>
  </thead>
  <tbody>
    <tr>
        <th scope="row">Content</th>
        <td><%= @ticket.content %></td>
    </tr>
    <tr> 
        <th scope="row">Admin Response</th>
        <td> <%= @ticket.admin_response %></td>
    </tr>
  </tbody>
</table>
<div class="mx-auto" style="width: 200px;">
<p>Resolved?<input type="checkbox"input type="checkbox" name="resolved?" value="true" <%= @ticket.resolved? ? "checked" : ""%>></p>
<a href="/tickets/<%= @ticket.id %>/edit" class="btn btn-primary">Edit</a>
 <form action="/tickets/<%= @ticket.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" class="btn btn-danger" value="Delete">
</form>
</div>
