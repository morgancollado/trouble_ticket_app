<h2>Respond to your Supplicant</h2>


<form action="/tickets/<%= @ticket.id %>" method="post">
<input type="hidden" name="_method" value="patch">
    <div class="form-group">
        <div class="form-group col-md-6">
        <label for="title">Subject</label>
        <input type="text" class="form-control" name="title" value="<%= @ticket.title %>">
    </div>
  </div>
  <div class="form-group">
        <div class="form-group col-md-6">
        <label for="content">Petitioner details</label>
        <input type="text" class="form-control" name="content" value="<%= @ticket.content %>">
      </div>
    </div>
     <div class="form-group">
        <div class="form-group col-md-6">
        <label for="content">Administrator Response</label>
        <textarea class="form-control" name="admin_response" rows="3"></textarea>
      </div>
    </div>
    <div class="form-check">
        <input type="hidden" name="resolved?" value="false">
        <input class="form-check-input" type="checkbox" name="resolved?" value="true"  <%= @ticket.resolved? ? "checked" : ""%>>
        <label class="form-check-label" for="resolved?">
        Resolved?
        </label>
    </div>
    <button type="submit" class="btn btn-warning">Alter</button>
</form>